{
    "version": "2.0.0",
    "tasks": [
		{
			"type": "shell",
			"label": "cl.exe build active file",
			"command": "cl.exe",
			"args": [
				"/Zi",
				"/EHsc",
				"/Fd:",
				"${fileDirname}\\bin\\",
				"/Fo:",
				"${fileDirname}\\bin\\",
				"/Fp:",
				"${fileDirname}\\bin\\",
				"/Fe:",
				"${fileDirname}\\bin\\${fileBasenameNoExtension}.exe",
				"${file}"
			],
			"problemMatcher": [
				"$msCompile"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		}
	]
}