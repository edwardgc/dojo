#include "gtest/gtest.h"

#include <string>
#include "Soundex.h"
using namespace std;

class SoundexTest : public::testing::TestWithParam<pair<string,string>>
{
};


TEST_P(SoundexTest, HandleValues)
{
    string left =  GetParam().first;
    string right = GetParam().second;
    EXPECT_EQ(soundex(left), right);
}


INSTANTIATE_TEST_CASE_P(Soundex, SoundexTest, testing::Values(
        pair<string,string>{"Robert","R163"},
        pair<string,string>{"Rupert","R163"},
        pair<string,string>{"Rubin","R150"},
        pair<string,string>{"Ashcraft","A261"},
        pair<string,string>{"Ashcroft","A261"},
        pair<string,string>{"Tymczak","T522"},
        pair<string,string>{"Pfister","P236"},
        pair<string,string>{"Asihcraft","A226"},
        pair<string,string>{"Asihcroft","A226"},
        pair<string,string>{"aaaaaaa","a000"},
        pair<string,string>{"mlhnbhwp","m451"},
        pair<string,string>{"mnhnamid","m530"},
        pair<string,string>{"mwnbwhp","m100"},
        pair<string,string>{"aabibmr","a115"},
